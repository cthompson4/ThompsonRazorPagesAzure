@page
@model ThompsonRazorPagesAzure.Pages.Preferences.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserPreferences[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPreferences[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPreferences[0].FavBook)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPreferences[0].FavMovie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPreferences[0].FavGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPreferences[0].WorstGenre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UserPreferences) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavBook)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavMovie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorstGenre)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> 
            </td> 
        </tr>
}
    </tbody>
</table>
